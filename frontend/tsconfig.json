{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "target": "es5",
    "lib": ["es2017", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "strict": true,
    "downlevelIteration": true
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "webpack"
  ],
  "types": [
    "typePatches"
  ]
}